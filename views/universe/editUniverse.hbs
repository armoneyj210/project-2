<h1><span class="marvel">Marvel</span> Vs <span class="head"> DC</span></h1>
<form method="POST" action="/universe/{{singleUniverse._id}}?_method=PUT">
    <!--
    Template for creating input form for a string object key called stringMember
    NOTE: for numeric input fields use `type="number"`
  --->
    <label for="universeName">Universe</label>
    <input type="text" value="{{singleUniverse.universe}}" placeholder="name" name="universe" id="universeName" />
    <label for="universeDescription">Description</label>
    <input type="text" value="{{singleUniverse.description}}" placeholder="description" name="description"
        id="universeDescription" />
    <label for="universeCharacters">Characters</label>
    <input type="text" name="characters" value="{{singleUniverse.characters}}" id="universeCharacters" />
    <br>
    <label for="universePic">Picture</label>
    <input type="text" name="pic" value="{{singleUniverse.pic}}" id="universePic">
    <input type="submit" value="Save Universe" />
</form>